          "id": "toolu_04Step4",
          "name": "create_invoice",
          "input": {
            "customer_id": 67890,
            "order_id": "ORD-2025-302",
            "items": [
              {
                "sku": "CABLE-CAT6",
                "quantity": 500,
                "unit_price": 1.5,
                "discount_percentage": 10
