          "type": "tool_use",
          "id": "toolu_03Step3A",
          "name": "request_human_approval",
          "input": {
            "request_type": "high_value_invoice",
            "order_id": "ORD-2025-301",
            "customer_id": 67890,
            "customer_name": "Global Tech Solutions",
            "amount_before_discount": 7450.0,
            "discount_percentage": 10,
